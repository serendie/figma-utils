{
  "name": "@serendie/figma-utils",
  "description": "utils for figma",
  "version": "0.0.1",
  "type": "module",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "npm run build:cli",
    "build:cli": "tsup src/cli/*.ts --format esm --platform node --shims --clean",
    "test": "vitest",
    "sync-json-to-figma": "tsx src/json_to_figma/sync_tokens_to_figma.ts",
    "ci:sync-json-to-figma": "tsx src/json_to_figma/sync_tokens_to_figma.ts --silent",
    "release": "release-it --config ../.release-it.json",
    "sync-figma-to-json": "tsx src/figma_to_json/index.ts",
    "test:sync-figma-to-json": "vitest src/figma_to_json"
  },
  "devDependencies": {
    "@figma/rest-api-spec": "^0.16.0",
    "@types/node": "^20.11.25",
    "release-it": "^17.11.0",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "commander": "^13.0.0",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.5",
    "tsup": "^8.3.5",
    "tsx": "^4.7.2",
    "typescript": "^5.5.3"
  },
  "bin": {
    "sync-to-figma": "./dist/sync-to-figma.js",
    "sync-from-figma": "./dist/sync-from-figma.js"
  },
  "files": [
    "dist",
    "bin"
  ]
}
